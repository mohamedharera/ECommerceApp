<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddProduct">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sloganCategory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_categoryLayout"
        android:layout_below="@+id/sloganCategory"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/tshirts"
            android:id="@+id/cloths_tshirts"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sports"
            android:id="@+id/cloths_sports"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/cloths_female"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/cloths_sweather"
            android:src="@drawable/sweather"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear2_categoryLayout"
        android:layout_below="@+id/linear_categoryLayout"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            android:layout_marginEnd="16dp"
            android:id="@+id/glasses"
            android:layout_marginRight="16dp" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            android:layout_marginRight="5dp"
            android:id="@+id/purses_bags"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/hats"
            android:src="@drawable/hats"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear3_categoryLayout"
        android:layout_below="@+id/linear2_categoryLayout"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            android:layout_marginEnd="16dp"
            android:id="@+id/headphoness"
            android:layout_marginRight="16dp" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            android:layout_marginRight="5dp"
            android:id="@+id/laptops"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/watches"
            android:src="@drawable/watches"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/mobiles"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logoutBtn"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check_ordersBtn"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:text="check new orders"
        android:layout_above="@+id/logoutBtn"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"/>
</RelativeLayout>