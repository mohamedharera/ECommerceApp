<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:id="@+id/product_imageDetails"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_nameDetails"
        android:layout_below="@+id/product_imageDetails"
        android:layout_centerHorizontal="true"
        android:text="product name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_description_details"
        android:layout_below="@+id/product_nameDetails"
        android:layout_centerHorizontal="true"
        android:text="product description"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_price_details"
        android:layout_below="@+id/product_description_details"
        android:layout_centerHorizontal="true"
        android:text="product price"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textSize="16dp"
        android:elevation="6dp"
        app:initialNumber="1"
        app:finalNumber="10"
        android:gravity="center"
        android:layout_below="@+id/product_price_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/numberBtn">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pd_add_to_cart_button"
        android:text="Add to Cart"
        android:layout_alignParentBottom="true"
        android:textSize="18dp"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="15dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>

</RelativeLayout>